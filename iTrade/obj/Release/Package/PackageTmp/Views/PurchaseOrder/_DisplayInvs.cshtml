@using iTrade.CustomHtmlHelper;
@model IEnumerable<iTrade.Models.PoINV>

@using (Html.BeginForm("PurchaseInvs", null, FormMethod.Get))
{

    <!-- begin row -->
    <div class="row">
        <!-- begin col-12 -->
        <div class="col-md-12">
            <!-- begin panel -->
            <div class="panel panel-inverse">

                <div class="panel-body">
                    <div class="table-responsive">
                        <table id="data-table0" class="table table-striped table-bordered">
                            <thead>
                                <tr>
                                    <th>
                                        @Html.DisplayNameFor(model => model.InvNo)
                                    </th>
                                    <th class="col-md-3">
                                        @Html.DisplayNameFor(model => model.CustName)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.InvDate)
                                    </th>
                                    <th>
                                        Currency
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Nett)
                                    </th>
                                    <th>
                                        Outstanding
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Status)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.IsPaid)
                                    </th>



                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tbody>

                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.InvNo)

                                        </td>

                                        <td>
                                            @Html.DisplayFor(modelItem => item.CustName)
                                            @if (!string.IsNullOrEmpty(item.CustName2))
                                            {
                                                <span>&nbsp; (@Html.DisplayFor(modelItem => item.CustName2))</span>
                                            }

                                        </td>

                                        <td>
                                            @Html.DisplayFor(modelItem => item.InvDate)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.CurrencyName)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Nett)
                                        </td>
                                        <td>
                                            @(item.Nett - item.PaidAmount)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Status)
                                        </td>

                                        <td>
                                            @Html.DisplayFor(modelItem => item.IsPaid)
                                        </td>


                                        <td>
                                            <a href="@Url.Action("ViewPI", "PurchaseOrder", new { id = item.InvID })" class="btn btn-primary">
                                                <span class="fa fa-angle-double-right" />
                                            </a>
                                        </td>
                                    </tr>
                                }

                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
            <!-- end panel -->
        </div>
        <!-- end col-12 -->
    </div>
    <!-- end row -->

}



