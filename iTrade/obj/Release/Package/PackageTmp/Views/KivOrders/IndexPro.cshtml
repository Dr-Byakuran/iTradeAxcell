@model IEnumerable<iTrade.Models.KIV>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutMain.cshtml";
    var kivBalance = Model.Where(x => x.BalanceQty > 0).OrderByDescending(x => x.InvNo).ThenBy(x => x.CustName).ToList();
