<script>

    function delItem(ID) {
        var newUrl1 = $('#txtUrl1').val();

        $.ajax({
            type: 'GET',
            url: '/CourseOrders/_DelItem',
            dataType: "json",
            contentType: 'application/json, charset=utf-8',
            data: {
                id: ID
            },
            success: function (result) {
                if (result.success) {
                 //   alert("Item Deleted");
                    $("#divOrderDetail").load(newUrl1);
                }
            },
            error: function (xhr, status, error) {
                alert(error);
            }

        });
    }

    function itemMoveUp(ID)
    {
        var newUrl1 = $('#txtUrl1').val();
        $.ajax({
            type: 'GET',
            url: '/CourseOrders/_ItemMoveUp',
            dataType: "json",
            contentType: 'application/json, charset=utf-8',
            data: {
                id: ID
            },
            success: function (result) {
                if (result.success) {
                    //   alert("Item Deleted");
                    $("#divOrderDetail").load(newUrl1);
                }
            },
            error: function (xhr, status, error) {
                alert(error);
            }

        });
    }

</script>


