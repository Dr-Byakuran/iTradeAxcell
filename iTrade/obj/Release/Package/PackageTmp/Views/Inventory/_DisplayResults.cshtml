@model IEnumerable<iTrade.Models.StockTakeDet>


@using (Html.BeginForm())
{
    <div class="table-responsive">
        <table id="data-table1" class="table table-striped table-bordered">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.SKU)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.ProductName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.InStock)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Allocated)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.OnHand)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.StockTakeQty)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.DifferentQty)
                    </th>

                </tr>
            </thead>
            <tbody>

                @foreach (var item in Model)
                {
                    <tr class="even gradeC">
                        <td>
                            @Html.DisplayFor(modelItem => item.SKU)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ProductName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.InStock)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Allocated)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.OnHand)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.StockTakeQty)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.DifferentQty)
                        </td>
                    </tr>

                }

            </tbody>
        </table>
    </div>
}


<script>
    $(document).ready(function () {
        $('#data-table1').DataTable({
            "dom": '<"pull-left"f><"pull-right"l>tip'
        });
    });
</script>