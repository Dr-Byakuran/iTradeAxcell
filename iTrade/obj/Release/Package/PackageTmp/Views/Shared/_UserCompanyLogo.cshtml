
@model iTrade.Models.Company

@{
    var imgSrc = "/assets/img/logo.png";
    if (Model.ID > 0)
    {
        if (Model.LogoImage != null)
        {
            var base64 = Convert.ToBase64String(Model.LogoImage);
            imgSrc = String.Format("data:image/gif;base64,{0}", base64);
        }


    }
}
<div class="img-rounded text-center"> <img src="@imgSrc" class="img-rounded" alt="Logo" /></div>