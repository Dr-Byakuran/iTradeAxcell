@model iTrade.Models.INVDET

<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
    <h3 class="modal-title">Delete Item &nbsp;&nbsp;&nbsp;&nbsp;  <span id="txtTitle"></span> </h3>
</div>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(model => model.DetID)


    <div class="modal-body">
        <br /><br />

        <p> Are you sure you want to remove this item?  <br /><br />  @Model.ItemName </p>
        <br /><br /><br />
    </div>

    <div class="modal-footer">

        <input class="btn btn-primary" id="btnDelete" type="submit" value="Yes" />
        <button class="btn btn-white" data-dismiss="modal">No</button>
    </div>
}


