@using (Html.BeginForm("index", null, FormMethod.Get))
{
    <!-- begin row -->
    <div class="row">
        <!-- begin col-12 -->
        <div class="col-md-12">
            <!-- begin panel -->
            <div class="panel panel-inverse">

                <div class="panel-body">
                    <div class="table-responsive">
                        @{
    var iCount = 0;
    var iCommaCount = 0;
                        }
                        <table id="data-table1" class="table table-striped table-bordered">
                            <thead>
                                <tr>
                                    <th width="30px">
                                        No.
                                    </th>
                                    <th>
                                        User
                                    </th>
                                    <th>
                                        Companies
                                    </th>
                                    <th width="140px">Action</th>

                                </tr>
                            </thead>
                            <tbody>

                                @foreach (var item in Model)
                                {
                                    iCount++;
                                    iCommaCount = 0;
                                    <tr class="even gradeC">
                                        <td>
                                            @iCount
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.DisplayName)
                                        </td>
                                        <td>
                                            @foreach (var item2 in item.CompanyList)
                                            {
                                                var sComma = ", ";
                                                if (iCommaCount == 0)
                                                {
                                                    iCommaCount++;
                                                }
                                                else
                                                {
                                                    @sComma
                                                }
                                                @Html.DisplayFor(modelItem => item2.Name)
                                                var sDefault = "";
                                                if (item2.IsDefault)
                                                {
                                                    sDefault = " (Default)";
                                                }
                                                @sDefault
                                            }
                                        </td>
                                        <td>

                                            <a href="@Url.Action("Create", "UserCompanies", new { id = item.UsersAdminID })" class="btn btn-primary">
                                                <span class="fa fa-angle-double-right" />
                                            </a>

                                        </td>
                                    </tr>

                                }

                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
            <!-- end panel -->
        </div>
        <!-- end col-12 -->
    </div>
    <!-- end row -->

}



@section Scripts{
    <script src="@Url.Content("~/assets/plugins/DataTables/js/jquery.dataTables.js")"></script>
    <script src="@Url.Content("~/assets/js/table-manage-default.demo.min.js")"></script>
