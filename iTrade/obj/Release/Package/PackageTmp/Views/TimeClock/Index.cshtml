@model iTrade.Models.Schedule

@{
    Layout = null;
}

<!DOCTYPE html>
<!--[if IE 8]> <html lang="en" class="ie8"> <![endif]-->
<!--[if !IE]><!-->
<html lang="en">
<!--<![endif]-->
<head>
    <meta charset="utf-8" />
    <title>STAR3ERP | ATTENDANCE</title>
    <meta content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no" name="viewport" />


    <link href="@Url.Content("http://fonts.googleapis.com/css?family=Open+Sans:300,400,600,700")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/assets/plugins/jquery-ui/themes/base/minified/jquery-ui.min.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/assets/plugins/bootstrap/css/bootstrap.min.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/assets/plugins/font-awesome/css/font-awesome.min.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/assets/css/animate.min.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/assets/css/style.min.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/assets/css/style-responsive.min.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/assets/css/theme/blue.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/assets/plugins/gritter/css/jquery.gritter.css")" rel="stylesheet" type="text/css" />

</head>
<body class="pace-top">
    <!-- begin #page-loader -->
    <div id="page-loader" class="fade in"><span class="spinner"></span></div>
    <!-- end #page-loader -->
    <div class="login-cover">

        <div class="login-cover-bg"></div>
    </div>

@using (Html.BeginForm("index", null, FormMethod.Get))
{

    <!-- begin #page-container -->
    <div id="page-container" class="fade">
        <!-- begin login -->
        <div class="login login-v2" data-pageload-addclass="animated fadeIn">
            <!-- begin brand -->
            <div class="login-header">
                <div class="brand">
                    <img src="~/assets/img/star3erp.png" /> <span style="font-size:24px;">| ATTENDANCE</span>
 
                </div>
                <div class="icon">
                    <i class="fa fa-sign-in"></i>
                </div>

                <br />

            </div>
            <!-- end brand -->



            <div class="login-content">
                <span class="lead" style="color: #ffffff">Class: &nbsp;&nbsp; @Model.CourseName </span> <br />
                <span class="lead" style="color: #ffffff">Date: &nbsp;&nbsp;&nbsp; @System.DateTime.Today.ToShortDateString() </span> <br />
                <span class="lead" style="color: #ffffff">Time: &nbsp;&nbsp;&nbsp; @Model.StartTime.Value.ToShortTimeString() - @Model.EndTime.Value.ToShortTimeString()  </span>

                    <div class="form-group m-t-20"> &nbsp;
                        
                    </div>
                    <div class="input-group input-group-lg">
                        <span class="input-group-addon"><i class="fa fa-user"></i></span>
                        <input type="text" id="txtPersonID" name="txtPersonID" class="form-control" placeholder="Enter student NRIC" />
                        <input type="hidden" id="txtScheduleID" name="txtScheduleID" value="@Model.ScheduleID" class="form-control"  />
                    </div>
                    <br />

                    <div class="login-buttons text-center">
                        <a data-modal="" href="/TimeClock/_ClockIn" id="btnIn" class="btn btn-primary btn-lg"><i class="fa fa-sign-in"></i> &nbsp; IN &nbsp;</a> &nbsp;&nbsp;
                        <a data-modal="" href="/TimeClock/_ClockOut" id="btnOut" class="btn btn-info btn-lg hidden"><i class="fa fa-sign-out"></i> OUT </a>
                    </div>

                    <div class="form-group m-t-20 text-center">
                        <span style="font-size:58px;">@System.DateTime.Now.ToString("hh:mm tt") </span>
                    </div>

         
            </div>
        </div>
        <!-- end login --> 

    </div>
    <!-- end page container -->
    
}

    <!-- modal placeholder-->
    <div id="myModal" class="modal" data-keyboard="false" data-backdrop="static">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div id='myModalContent'></div>
            </div>
        </div>
    </div>



    <script src="@Url.Content("~/assets/plugins/jquery/jquery-1.9.1.min.js")"></script>
    <script src="@Url.Content("~/assets/plugins/jquery/jquery-migrate-1.1.0.min.js")"></script>
    <script src="@Url.Content("~/assets/plugins/jquery-ui/ui/minified/jquery-ui.min.js")"></script>
    <script src="@Url.Content("~/assets/plugins/bootstrap/js/bootstrap.min.js")"></script>
    <script src="@Url.Content("~/assets/plugins/slimscroll/jquery.slimscroll.min.js")"></script>
    <script src="@Url.Content("~/assets/plugins/jquery-cookie/jquery.cookie.js")"></script>
    <script src="@Url.Content("~/assets/plugins/gritter/js/jquery.gritter.js")"></script>
    <script src="@Url.Content("~/assets/js/ui-modal-notification.demo.min.js")"></script>
    <script src="@Url.Content("~/assets/js/login-v2.demo.min.js")"></script>
 
    <script src="@Url.Content("~/assets/js/apps.min.js")"></script>

    <script src="@Url.Content("~/Scripts/modal-timeclock.js")"></script>



    <script>
		$(document).ready(function() {
		 	App.init();
		 	LoginV2.init();

		 	$('#txtPersonID').select();
		 	$('#txtPersonID').focus();

		});
    </script>


</body>
</html>
