@model IEnumerable<iTrade.Models.KivOrder>
@using iTrade.Models
@{
    ViewBag.Title = "IndexDrSubmit";
    Layout = "~/Views/Shared/_LayoutMain.cshtml";
    List<KivOrder> KivOrderNew = Model.Where(x => x.Status2 == null || x.Status2 != "Completed").ToList();
    List<KivOrder> KivOrderCompleted = Model.Where(x => x.Status2 != null && x.Status2 == "Completed").ToList();
}

