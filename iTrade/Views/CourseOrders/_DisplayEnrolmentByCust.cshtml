@model List<iTrade.Models.Enrolment>

<!-- begin row -->
<div class="row">
    <!-- begin col-12 -->
    <div class="col-md-12">
        <!-- begin panel -->
        <div class="panel panel-inverse">

            <div class="panel-body">
                <div class="table-responsive">
                    <table id="data-table1" class="table table-striped table-bordered">
                        <thead>
                            <tr>
                                <th>
                                    Enrol#
                                </th>
                                <th>Date </th>

                                <th class="col-md-3">
                                    Course Name
                                </th>
                                <th>Level</th>
                                <th>Course Type</th>
                                <th>
                                    Duration
                                </th>
                                <th>
                                    Teacher
                                </th>
                                <th>
                                    Start Date  
                                </th>
                                <th>
                                    End Date
                                </th>
                                <th>Fee</th>
                                <th>Status</th>
                                <th>Remark</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>

                            @for (int i = 0; i < Model.Count; i++)
                            {
                                var sum = 0;
                                    <tr>

                                        <td>
                                            @Model[i].EnrNo
                                        </td>
                                        <td>@Model[i].EnrDate.ToShortDateString()</td>

                                        <td>
                                            @Model[i].CourseName - @Enum.GetName(typeof(DayOfWeek), Model[i].Weekday) - @Model[i].StartTimeValue - @Model[i].EndTimeValue
                                        </td>
                                        <td>
                                            @Model[i].CourseLevel 
                                        </td>
                                        <td>
                                            @Model[i].CourseType
                                            @foreach (var item in ViewData["EnrolmentAll"] as IEnumerable<iTrade.Models.Enrolment>)
                                            {
                                                if (item.PriceID == Model[i].PriceID)
                                                {
                                                    sum++;
                                                }
                                            }
                                            <span>(@sum)</span>
                                        </td>
                                        <td>
                                            @Model[i].CourseDuration
                                        </td>
                                        <td>
                                            @Model[i].TutorName
                                        </td>
                                        <td>
                                            @Model[i].StartDate.ToShortDateString()
                                        </td>
                                        <td>
                                            @Model[i].EndDate
                                        </td>
                                        <td>
                                            @Model[i].CourseFee
                                        </td>
                                        <td>
                                            @Model[i].Status
                                        </td>
                                        <td>@Model[i].Remark  </td>
                                        <td>
                                            <a href="@Url.Action("EnrolEdit", "CourseOrders", new { id = Model[i].EnrID })" class="btn btn-primary">
                                                <span class="fa fa-angle-double-right" />
                                            </a>
                                        </td>
                                    </tr>
           


                            }



                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        <!-- end panel -->
    </div>
    <!-- end col-12 -->
</div>
<!-- end row -->


<script>
    $(document).ready(function () {
        $('#data-table1').DataTable({
            "iDisplayLength": 100,
            "order": [[0, "desc"]],
            "dom": '<"pull-left"f><"pull-right"l>tip'
        });
    });
</script>

<script type="text/javascript">
    $(document).ready(function () {
        $(document).on("click", ".selectInvNo", function () {
            var myInvNo = $(this).data('id');
         //   alert(myInvNo);

            $("#invRef").val(myInvNo);
            $("#addKivOrderForm").submit();

        });
    });
</script>


