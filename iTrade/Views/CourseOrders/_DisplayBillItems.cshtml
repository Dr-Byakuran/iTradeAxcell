@model List<iTrade.Models.BillItem>
@using iTrade.CustomHtmlHelper;

<!-- begin row -->
<div class="row">
    <!-- begin col-12 -->
    <div class="col-md-12">
        <!-- begin panel -->
        <div class="panel panel-inverse">

            <div class="panel-body">
                <div class="table-responsive">
                    <table id="data-table1" class="table table-striped table-bordered">
                        <thead>
                            <tr>
                                <th>
                                    No
                                </th>

                                <th class="col-md-2">Student</th>
                                <th>Branch name</th>
                                <th> For Month </th>
                                <th>
                                    Enrol#
                                </th>
                                <th class="col-md-3">
                                    Item Description
                                </th> 
                                <th>Qty</th>
                                <th>Unit Fee</th>
                                <th>
                                    Amount
                                </th>
                                <th>Is Billed?</th>
                                <th>Created On</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>

                            @for (int i = 0; i < Model.Count; i++)
                            {
                                <tr>
                                    <td>@(i+1) </td>

                                    <td>
                                        @Model[i].CustName
                                    </td>
                                    <td>
                                        @Model[i].BranchName
                                   </td>
                                    <td>@Convert.ToDateTime(Model[i].BillForMonth).ToString("MMM-yyyy") </td>
                                    <td>
                                        @Model[i].EnrNo

                                    </td>
                                    <td>
                                        @Model[i].ItemName <br />
                                        @Model[i].ClassDates
                                    </td>

                                    <td>
                                        @Model[i].Qty
                                    </td>
                                    <td>
                                        @Model[i].DiscountedPrice <br /> /4
                                    </td>
                                    <td>
                                        @Model[i].Amount
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => Model[i].IsBilled)
                                    </td>
                                    <td>
                                        @Model[i].CreatedOn.ToShortDateString()
                                    </td>
                                    <td>
                                        <a href="#" class="btn btn-primary">
                                            <span class="fa fa-angle-double-right" />
                                        </a>
                                    </td>
                                </tr>



                            }



                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        <!-- end panel -->
    </div>
    <!-- end col-12 -->
</div>
<!-- end row -->


<script>
    $(document).ready(function () {
        $('#data-table1').DataTable({
            "iDisplayLength": 100,
            "order": [[0, "asc"]],
            "dom": '<"pull-left"f><"pull-right"l>tip'
        });
    });
</script>






