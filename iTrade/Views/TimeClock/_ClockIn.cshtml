@using (Html.BeginForm("_ClockIn", "TimeClock", FormMethod.Post, new { id = "clockInForm" }))
{
    @Html.AntiForgeryToken()
    <div class="modal-body">
        <div class="form-horizontal">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.ID, new { @Value = "0" })
            @Html.HiddenFor(model => model.ScheduleID)
            @Html.HiddenFor(model => model.CourseID)
            @Html.HiddenFor(model => model.CourseName)
            @Html.HiddenFor(model => model.PersonID)
            @Html.HiddenFor(model => model.PersonName)
            @Html.HiddenFor(model => model.NRIC)
            @Html.HiddenFor(model => model.ClockTime)
            @Html.HiddenFor(model => model.InOut)
            @Html.HiddenFor(model => model.ClockLocation)

            <div class="form-group text-center">
                <h4><i class="fa fa-user"></i> &nbsp; Hi, @Model.PersonName &nbsp;&nbsp; <small>@Model.NRIC</small></h4>
                <hr style="width:50%;" />
            </div>
            <div class="form-group text-center">
                <span style="font-size:38px;">Would you like to clock in? <br /> @System.DateTime.Now.ToString("hh:mm tt")</span>
            </div>
            <div class="form-group text-center">
                <span class="col-sm-8 col-sm-offset-2">
                    @Html.EditorFor(model => model.Notes, new { htmlAttributes = new { @class = "form-control input-lg", placeholder = "Want to add a note, add it here..." } })
                </span>

            </div>
        </div>

    </div>

    <div class="modal-footer text-center">
        <span id="progress" class="text-center" style="display: none;">
            <img src="~/assets/img/Wait.gif" alt="wait" />
            Wait..
        </span>
        <input class="btn btn-primary" type="submit"  value=" Confirm " /> &nbsp;&nbsp;
        <button class="btn btn-white" data-dismiss="modal">Not Now</button>

        <br /><br />
    </div>

}

