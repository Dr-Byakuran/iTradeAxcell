@model IEnumerable<iTrade.Models.Purchase>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutMain.cshtml";
}

<!-- ================== BEGIN PAGE LEVEL STYLE ================== -->
<link href="@Url.Content("~/assets/plugins/DataTables/css/data-table.css")" rel="stylesheet" type="text/css" />
<link href="@Url.Content("~/assets/plugins/gritter/css/jquery.gritter.css")" rel="stylesheet" type="text/css" />
<!-- ================== END PAGE LEVEL STYLE ================== -->
<!-- begin page-header -->
<h1 class="page-header lead">Purchasing </h1>
<!-- end page-header -->
<div class="email-btn-row hidden-xs">
    <a href="/Purchases/Create" id="btnCreate" class="btn btn-primary"><i class="fa fa-plus m-r-5"></i> New Purchase</a>
</div>


<!-- begin row -->
<div class="row">
    <!-- begin col-12 -->
    <div class="col-md-12">
        <!-- begin panel -->
        <div class="panel panel-inverse">

            <div class="panel-body">
                <div class="table-responsive">
                    <table id="data-table1" class="table table-striped table-bordered">
                        <thead>
                            <tr>
                                <th>
                                    NO
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.DateIn)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.BatchNo)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.ProductCode)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.ProductName)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Length)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Qty)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Unit)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.BuyingPriceORG)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.ExRate)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.BuyingPriceSGD)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Country)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.SupplierName)
                                </th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @{ int i = 0; }
                            @foreach (var item in Model)
                            {
                                i++;
                                <tr class="even gradeC">
                                    <td>
                                        @i
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.DateIn)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.BatchNo)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.ProductCode)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.ProductName)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Length)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Qty)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Unit)
                                    </td>
                                    <td class="text-right"><span class="pull-left">@Html.DisplayFor(modelItem => item.Currency)</span>
                                        @Html.DisplayFor(modelItem => item.BuyingPriceORG) 
                                    </td>
  
                                    <td>
                                        @Html.DisplayFor(modelItem => item.ExRate)
                                    </td>
                                    <td class="text-right">
                                        @Html.DisplayFor(modelItem => item.BuyingPriceSGD)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Country)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.SupplierName)
                                    </td>
                                    <td>
                                        <a href="@Url.Action("Edit", "Purchases", new { id = item.PurID })" class="btn btn-primary">
                                            <span class="fa fa-angle-double-right" />
                                        </a>
                                    </td>
                                </tr>
                            }

                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        <!-- end panel -->
    </div>
    <!-- end col-12 -->
</div>
<!-- end row -->

@section Scripts{
    <script src="@Url.Content("~/assets/plugins/DataTables/js/jquery.dataTables.js")"></script>
    <script src="@Url.Content("~/assets/js/table-manage-default.demo.min.js")"></script>
    <script src="@Url.Content("~/assets/plugins/gritter/js/jquery.gritter.js")"></script>
    <script src="@Url.Content("~/assets/js/ui-modal-notification.demo.min.js")"></script>
    <script src="@Url.Content("~/assets/js/apps.min.js")"></script>

    <script src="@Url.Content("~/Scripts/modal-client.js")"></script>


}


<script>
        $(document).ready(function () {
           // App.init();
            TableManageDefault.init();
           // Notification.init();
        });
</script>

<script>
    $(document).ready(function () {
        $('#data-table1').DataTable({
            "dom": '<"pull-left"f><"pull-right"l>tip'
        });
    });
</script>

