@model iTrade.Models.PoINVDET

<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
    <h3 class="modal-title"><span class="lead">Delete Item</span> &nbsp;&nbsp;&nbsp;&nbsp;  <span id="txtTitle"></span> </h3>
</div>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(model => model.DetID)


    <div class="modal-body">
        <h3 class="lead">Are you sure you want to remove this item?</h3>
        <p>    @Model.ItemName </p>

    </div>

    <div class="modal-footer">

        <input class="btn btn-primary" id="btnDelete" type="submit" value="Yes" />
        <button class="btn btn-white" data-dismiss="modal">No</button>
    </div>
}


