        <script type="text/javascript">
            $("#btnAddItem").click(function (e) {
                e.preventDefault();
                //  $(this).prop('disabled', true);

                $("#btnActionType").val("SaveAndNext");
                $("#addScheduleForm").submit();

            });

            $("#btnAddItem2").click(function (e) {
                e.preventDefault();
                //   $(this).prop('disabled', true);

                $("#btnActionType").val("SaveAndClose");
