</div>
<!-- end page-header -->

<div>
    <ul class="nav nav-tabs">
        <li class="active"><a href="#default-tab-1" data-toggle="tab">Pending Action  <span style="margin-left:15px;" class="badge"></span></a></li>
        <li class=""><a href="#default-tab-2" data-toggle="tab"><h5 class="media-heading">Completed</h5> </a></li>
    </ul>

</div>
<div class="tab-content">
    <div class="tab-pane fade active in" id="default-tab-1">
        <div class="row">
            <div class="col-md-12">
                <div class="table-responsive">
                    @{Html.RenderAction("_DisplayClassAbsents", "Attendance", new { invtype = "", thedate = DateTime.Now.Date });}
                </div>
            </div>
        </div>
    </div>
    <div class="tab-pane fade" id="default-tab-2">
        <div class="row">
            <div class="col-md-12">
                <div class="table-responsive">
                    @{Html.RenderAction("_DisplayClassAbsents", "Attendance", new { invtype ="Completed", thedate = DateTime.Now.Date });}
                </div>
            </div>
        </div>

        <br /><br /><br /><br />
    </div>
</div>





