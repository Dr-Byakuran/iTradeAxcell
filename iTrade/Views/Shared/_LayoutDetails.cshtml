@{ 
    if (ViewBag.FrmType == null)
    {
        ViewBag.FrmType = 0;
        if (Model!=null && Model.Id !=null)
        {
            if (Model.Id == 0)
            { ViewBag.FrmType = 1; }//create
            if (Model.Id > 0)
            { ViewBag.FrmType = 2; }//edit
            if (Model.Id < 0)
            {
                ViewBag.FrmType = 3;//browse
            }
        }

    }
}
<script>
    var frmType=@ViewBag.FrmType;
    $(function(){
        if(frmType == 3)
        {
            //$('fieldset').attr('disabled', true);
            $('input').attr('disabled', true);
            $('select').attr('disabled', true);
        }
    })
</script>