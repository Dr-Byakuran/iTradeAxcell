                            <b class="caret pull-right"></b>
                            <i class="fa fa-cog"></i>
                            <span>Setting</span>
                        </a>
                        <ul class="sub-menu">
                            <li class='@Html.IsActive("Staffs", "Index")'>
                                <a href="@Url.Action("Index", "Staffs")">
