                        <a href="#">
                            <i class="fa fa-calculator"></i><span>Payroll</span>
                        </a>
                    </li>

                    <li class="has-sub @sHuman">
                        <a href="javascript:;">
                            <b class="caret pull-right"></b>
                            <i class="fa fa-th-large"></i>
                            <span>Human Resources</span>
                        </a>
                        <ul class="sub-menu">
