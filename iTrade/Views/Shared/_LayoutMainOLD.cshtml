                                    <span>Stock Transfer</span>
                                </a>
                            </li>

                        </ul>

                    </li>



                    <li class='@Html.IsActive("Suppliers", "Index") @sSupplier'>
                        <a href="@Url.Action("Index", "Suppliers")">
                            <i class="fa fa-share-alt-square"></i><span>Supplier</span>
