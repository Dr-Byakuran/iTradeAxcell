@using Microsoft.AspNet.Identity
@model IEnumerable<iTrade.Models.CompanyBranch>

<li class="dropdown">
    <a href="javascript:;" class="dropdown-toggle" data-toggle="dropdown">
        <i class="fa fa-diamond fa-fw"></i>
        <span class="hidden-xs">@ViewBag.OutletName  </span>
    </a>

    @if (ViewBag.AccessOutlets.Contains("1"))
    {
        <ul class="dropdown-menu animated fadeInLeft">
            <li class="arrow"></li>
            <li><a href="/Dashboard/SwitchOutlet/1">Default</a></li>            
            @foreach (var item in Model)
            {
                <li class="divider"></li>
                <li><a href="/Dashboard/SwitchOutlet/@item.BranchID">@item.BranchName</a></li>
            }

        </ul>
    }



</li>