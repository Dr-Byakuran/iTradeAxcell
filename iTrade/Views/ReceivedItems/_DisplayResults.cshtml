
@using iTrade.CustomHtmlHelper;
@model IEnumerable<iTrade.Models.ReceivedItem>

@using (Html.BeginForm("index", null, FormMethod.Get))
{

    <!-- begin row -->
    <div class="row">
        <!-- begin col-12 -->
        <div class="col-md-12">
            <!-- begin panel -->
            <div class="panel panel-inverse">

                <div class="panel-body">
                    <div class="table-responsive">
                        <table id="data-table@{ @Html.ViewBag.TableNo }" class="table table-striped table-bordered">
                            <thead>
                                <tr>
                                    <th>
                                        @Html.DisplayNameFor(model => model.ReceivedItemID)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.InvDate)
                                    </th>
                                    <th class="col-md-3">
                                        @Html.DisplayNameFor(model => model.SupplierName)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.InvType)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Status)
                                    </th>


                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tbody>

                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.ReceivedItemID)

                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.InvDate)
                                        </td>

                                        <td>
                                            @Html.DisplayFor(modelItem => item.SupplierName)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.InvType)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Status)
                                        </td>


                                        <td>
                                            <a href="@Url.Action("Edit", "ReceivedItems", new { id = item.ReceivedItemID })" class="btn btn-primary">
                                                <span class="fa fa-angle-double-right" />
                                            </a>
                                        </td>
                                    </tr>
                                }

                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
            <!-- end panel -->
        </div>
        <!-- end col-12 -->
    </div>
    <!-- end row -->

}

