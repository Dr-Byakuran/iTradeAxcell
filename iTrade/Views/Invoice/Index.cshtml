    @*<a href="@Url.Action("PrintPreview", "Invoice")" id="btnCreate" class="btn btn-primary"><i class="fa fa-edit m-r-5"></i> Preview Template</a>*@
</div>


<form action="@Url.Action("Index", "Invoice")" method="POST" data-parsley-validate="true">
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <input type="hidden" name="strCustNo" id="strCustNo" value=@ViewBag.CustNo />
    <!-- begin row -->
    <div class="row">
        <!-- begin col-12 -->
        <div class="col-md-12">
            <!-- begin panel -->
            <div class="panel panel-inverse">
                <div class="panel-body">
                    <table>
                        <tr>
                            <td colspan="3"><h5><strong>To Filter Invoice</strong>&nbsp;Select the parameters below</h5></td>
                        </tr>
                        <tr>
                            <td colspan="3"><hr /></td>
                        </tr>
                        <tr>
                            <td><label class="control-label">Customer Name</label></td>
                            <td width="300px"><label class="control-label">Date Range &nbsp;</label></td>
                            <td></td>
                        </tr>
                        <tr>
                            <td>
                                @Html.DropDownList("CustNo", Model.Customer, "-- Select Customer Name --", new { @class = "form-control" })
                            </td>
                            <td>
                                <div class="input-group input-daterange" data-date-format="dd/mm/yyyy">
                                    <input type="text" class="form-control" name="startDate" placeholder="Date Start" value=@ViewBag.StartDate required />
                                    <span class="input-group-addon">TO</span>
                                    <input type="text" class="form-control" name="endDate" placeholder="Date End" value=@ViewBag.EndDate required />
                                </div>
                            </td>
                            <td>
                                <button type="submit" class="btn btn-primary" id="btnFilter">
                                    <i class="fa fa-search"></i>
                                    <span>Filter</span>
                                </button>
                            </td>
                        </tr>
                    </table>
                    <div class="row">
                        <!-- begin col-12 -->
                        <div class="col-md-12">
                            <!-- begin panel -->
                            <div class="panel panel-inverse">
                                <div class="panel-body">
                                    @Html.Partial("_InvoiceSummary")
                                </div>
                                <br />

                            </div>
                            <!-- end panel -->
                        </div>
                        <!-- end col-12 -->
                    </div>
                </div>
            </div>
            <!-- end panel -->
        </div>
        <!-- end col-12 -->
    </div>
    <!-- end row -->
</form>

