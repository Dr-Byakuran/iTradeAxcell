<!-- begin page-header -->
<div class="page-header lead">
    Reports / Daily Sales Report
    <span class="email-btn-row pull-right">
        <a href="/Reports/Index" id="btnBack" class="btn btn-default">Back to report</a>
    </span>

</div>
<!-- end page-header -->
<!-- begin panel -->

<div class="panel panel-default">
    <div class="panel-heading">
        <br />
        @using (Html.BeginForm("ReportByDailySales", null, FormMethod.Get))
        {
            <div class="row">
                <div class="col-md-8">

                    <form class="form-horizontal">
                        <div class="form-group">
                            <label class="control-label col-md-2 lead">Daily Report</label>
                            <div class="col-md-6">
                                <div class="input-group col-md-12">
                                    <span class="input-group-addon">Date</span>
                                    <input type="text" class="form-control col-md-5" id="fromDate" name="fromDate" value="@ViewBag.StartDate" placeholder="Date" />
                                </div>
                            </div>
                            <div class="col-md-2">
                                <input type="submit" value=" Apply " class="btn btn-primary col-md-12" />
                            </div>
                            <div class="col-md-2">
                                <a href="/Reports/PrintDailySales" target="_blank" id="btnPrint" class="btn btn-primary col-md-12">Print</a>
                            </div>
                        </div>

                    </form>
                </div>
            </div>
        }
    </div>
    @{
        decimal dTotalCashSales = 0;
        decimal dTotalCreditSales = 0;
        decimal dTotalChequeSales = 0;
        decimal dTotalNetsSales = 0;
        decimal dTotalCreditCardSales = 0;
        decimal dTotalCreditNoteSales = 0;
    }
