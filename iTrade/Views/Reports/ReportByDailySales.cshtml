        <!-- begin row -->
        <div class="row">
            <!-- begin col-12 -->
            <div class="col-md-12">
                <!-- begin panel -->
                <div class="panel panel-inverse">

                    <div class="panel-body">
                        <h4>Daily Sales report for @ViewBag.StartDate</h4>

                        <div class="table-responsive">
                            <table class="table table-striped table-bordered">
                                <thead>
                                    <tr>
                                        <th colspan="2">
                                            &nbsp;
                                        </th>
                                        <th align="right" width="160px">
                                            AMOUNT&nbsp;&nbsp;&nbsp;&nbsp;
                                        </th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr>
                                        <td>
                                            SALES
                                        </td>
                                        <td>
                                            DAILY CASH SALES
                                        </td>
                                        <td>
                                            @ViewBag.TotalDailyCash
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>
                                            &nbsp;
                                        </td>
                                        <td>
                                            CREDIT SALES
                                        </td>
                                        <td>@ViewBag.TotalCreditSales</td>
                                    </tr>
                                    <tr>
                                        <td>
                                            &nbsp;
                                        </td>
                                        <td>
                                            <b>TOTAL SALES</b>
                                        </td>
                                        <td>@ViewBag.TotalSales</td>
                                    </tr>
                                    <tr>
                                        <td>
                                            &nbsp;
                                        </td>
                                        <td>
                                            &nbsp;
                                        </td>
                                        <td>&nbsp;</td>
                                    </tr>
                                    <tr>
                                        <td>
                                            RECEIVED
                                        </td>
                                        <td>
                                            CASH
                                        </td>
                                        <td>@ViewBag.ReceivedByCash</td>
                                    </tr>
                                    <tr>
                                        <td>
                                            &nbsp;
                                        </td>
                                        <td>NETS</td>
                                        <td>@ViewBag.ReceivedByNETS</td>
                                    </tr>
                                    <tr>
                                        <td>
                                            &nbsp;
                                        </td>
                                        <td>CREDIT CARD</td>
                                        <td>@ViewBag.ReceivedByCreditCard</td>
                                    </tr>
                                    <tr>
                                        <td>
                                            &nbsp;
                                        </td>
                                        <td>
                                            CHEQUE
                                        </td>
                                        <td>@ViewBag.ReceivedByCheque</td>
                                    </tr>
                                    <tr>
                                        <td>
                                            &nbsp;
                                        </td>
                                        <td>CREDIT NOTE</td>
                                        <td>@ViewBag.ReceivedByCreditNote</td>
                                    </tr>
                                    <tr>
                                        <td>
                                            &nbsp;
                                        </td>
                                        <td><b>TOTAL RECEIVED</b></td>
                                        <td>@ViewBag.TotalReceived</td>
                                    </tr>
                                    <tr>
                                        <td>
                                            &nbsp;
                                        </td>
                                        <td>&nbsp;</td>
                                        <td>&nbsp;</td>
                                    </tr>
                                    <tr>
                                        <td>
                                            &nbsp;
                                        </td>
                                        <td><b>DIFFERENCE</b></td>
                                        <td>@ViewBag.TotalDifference</td>
                                    </tr>
                                </tbody>
                            </table>
                            <br />
                            <h4>CASH SALES DETAILS</h4>
                            <table class="table table-striped table-bordered">
                                <thead>
                                    <tr>
                                        <th width="160px">
                                            DATE
                                        </th>
                                        <th>
                                            COMPANY NAME & INVOICE NO.
                                        </th>
                                        <th width="160px">
                                            AMOUNT
                                        </th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in ViewBag.CashSalesDetail as IEnumerable<iTrade.Models.DailySalesReportDetail>)
                                    {
                                        dTotalCashSales += @item.Amount;
                                        <tr>
                                            <td>
                                                @item.RDate.ToShortDateString()
                                            </td>

                                            <td>
                                                @item.CompanyName  &nbsp; / &nbsp; @item.InvoiceNo

                                            </td>

                                            <td>
                                                @item.Amount
                                            </td>
                                        </tr>
                                    }
                                    <tr>
                                        <td width="160px">
                                            &nbsp;
                                        </td>

                                        <td align="right">
                                            TOTAL AMOUNT
                                        </td>

                                        <td width="160px">
                                            @dTotalCashSales
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                            <br />
                            <h4>CREDIT SALES DETAILS</h4>
                            <table class="table table-striped table-bordered">
                                <thead>
                                    <tr>
                                        <th width="160px">
                                            DATE
                                        </th>
                                        <th>
                                            COMPANY NAME & INVOICE NO.
                                        </th>
                                        <th width="160px">
                                            AMOUNT
                                        </th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in ViewBag.CSalesDetail as IEnumerable<iTrade.Models.DailySalesReportDetail>)
                                    {
                                        dTotalCreditSales += @item.Amount;
                                        <tr>
