@model List<iTrade.Models.KivListView>

<!-- begin row -->
<div class="row">
    <!-- begin col-12 -->
    <div class="col-md-12">
        <!-- begin panel -->
        <div class="panel panel-inverse">

            <div class="panel-body">
                <div class="table-responsive">
                    <table id="data-table1" class="table table-striped table-bordered">
                        <thead>
                            <tr>
                                <th>
                                    No
                                </th>
                                <th class="col-md-3">
                                    Company
                                </th>
                                <th>
                                    Invoice#
                                </th>
                                <th>Date </th>

                                <th>
                                   Product Name
                                </th>
                                <th>SKU</th>

                                <th>
                                   Order Qty
                                </th>
                                <th>Balance Qty</th>
                            </tr>
                        </thead>
                        <tbody>

                            @for (int i = 0; i < Model.Count; i++)
                            {
                                <tr>
                                    <td>@string.Format("{0}", i + 1) </td>
                                    <td class="col-md-3">@Model[i].INV.CustName </td>
                                    <td>@Model[i].INV.InvNo</td>
                                    <td>@Model[i].INV.InvDate.ToShortDateString()</td>

                                    <td class="col-md-3">
                                        @Model[i].KIV.ProductName
                                        @if (Model[i].KIV.SalesType == "FOCItem")
                                        {
                                            <span class="label label-warning">FOC</span>
                                        }
                                    </td>
                                    <td>@Model[i].KIV.SKU </td>

                                    <td>@Html.DisplayFor(model => model[i].KIV.OrderQty, new { htmlAttributes = new { @class = "form-control" } })</td>
                                    <td>@Html.DisplayFor(model => model[i].KIV.BalanceQty, new { htmlAttributes = new { @class = "form-control" } })</td>

                                </tr>

                            }



                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        <!-- end panel -->
    </div>
    <!-- end col-12 -->
</div>
<!-- end row -->






